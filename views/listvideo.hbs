
{{> index}}
{{#if error}}
<p>{{error}}</p>
{{else}}
<div class="w-3/4 h-auto flex flex-row border border-gray-500 rounded my-4">
    <div class="w-2/5 videoWrapper">
        <iframe width="100%" height="auto" src="https://www.youtube.com/embed/{{meta.id}}" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="w-full h-full">
        <div class="w-1/2 h-full mx-auto px-4 py-2 flex flex-col items-center">
            {{#each meta.formats.audio}}
                {{#if isAudio}}
                    <button class="mt-4 w-full rounded border-green-700 hover:border-green-600 border text-left">
                        <a class="w-full px-3 py-2 block" target="_blank" href="{{url}}">
                            MP3
                        </a>
                    </button>
                {{/if}}

            {{/each}}
            <div class="w-full flex flex-col selectcont mt-4">
                <div id="videoSelector" class="relative inline-block flex flex-row rounded px-3 py-2 border border-green-700 hover:border-green-600">
                    MP4 - {{meta.formats.video.[0].format_note}}
                </div>
                <div class="list hidden absolute w-1/4 flex flex-col items-center justify-center overflow-y-scroll bg-white">
                    {{#each meta.formats.video}}
                        {{#if isVideo}}
                            <button class="my-1 w-full rounded border-green-700 hover:border-green-600 border text-left">
                                <a class="w-full px-3 py-2 block" target="_blank" href="{{url}}">
                                    MP4 - {{format_note}}
                                </a>
                            </button>
                        {{/if}}
                    {{/each}}
                </div>
            </div>

        </div>
    </div>
</div>

{{/if}}